<% include ./partials/header %>

<h1>This is the index</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%= blog.title %></h2>
        <img src = "<%= blog.image %>">
        <span><%= blog.created %></span>
        <p><%- blog.body.substring(0, 200) %> . . .</p>
        <a href = "/blogs/<%= blog._id %>">Read More</a>
    </div>
<% }); %>

<% include ./partials/footer %>
